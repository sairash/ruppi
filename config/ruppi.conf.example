# Default styles inspired by charmbracelet/glow
# Using a pleasant, modern color palette.

[ruppi]
# Gap Configuration
max-gaps 3

# Theme Colors
tab-color "#4a5568"
tab-active-color "#48bb78"
tab-text-color "#ffffff"
tab-active-text-color "#ffffff"
background-color "#1a1a1a"
status-bar-color "#242424"
browser-background "#0e0e0e"
inspector-background "#1e1e1e"
browser-foreground "#ffffff"
inspector-foreground "#ffffff"

# Theme Icons
tab-close-icon "Ã—"
tab-new-icon "ï¼‹"
tab-prev-icon "â—€"
tab-next-icon "â–¶"
search-icon "ðŸ”—"

# Theme Text Labels
search-placeholder "Search or type a URL"
inspector-toggle-key "?"
quit-key "q"
search-key "i"
new-tab-tooltip "New Tab"

# Sixel Image Configuration
enable-sixel true
sixel-max-width 400
sixel-max-height 300

[div]
foreground #abb2bf

[h1]
prefix "# "
foreground #56b6c2
bold true
margin-top 1
margin-bottom 1

[h2]
prefix "## "
foreground #98c379
bold true
margin-top 1
margin-bottom 1

[h3]
prefix "### "
foreground #e5c07b
bold true
margin-top 1
margin-bottom 1

[h4]
prefix "#### "

[h5]
prefix "##### "


[p]
margin-bottom 1

[b]
bold true
foreground #c678dd

[i]
italic true
foreground #c678dd

[a]
prefix "("
foreground #61afef
underline true
infix ")"

[code]
background #2c313a
foreground #abb2bf
padding-left 2
padding-right 2

[blockquote]
prefix "> "
foreground #7f848e
italic true
padding-left 2
margin-left 1
margin-bottom 1

[li]
prefix "â€¢ "
# The renderer should prepend the bullet 'â€¢'
margin-left 2
margin-bottom 0

[hr]
foreground #5c6370
